@model SharedTripSystem.Models.Recommendations.CreateRecommendationFormModel

@{
    ViewData["Title"] = "Make Recommendation";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-2 col-sm-12">
            <form method="post">
                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control" placeholder="Sozopol,Burgas,Varna...">
                    <span asp-validation-for="Location" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descripton"></label>
                    <textarea asp-for="Descripton" class="form-control" rows="3" placeholder="Your expirience here :"></textarea>
                    <span asp-validation-for="Descripton" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>


